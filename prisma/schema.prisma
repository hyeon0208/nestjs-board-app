generator client {
  provider = "prisma-client-js"
}

// 데이터베이스에 대해 정의하기 위해 사용 (데이터베이스의 종류와 연결 정보를 설정)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 모델 정의 (DDL 정의)
model Board {
  id          String       @id @default(uuid())
  title       String
  description String
  status      BoardsStatus @default(PUBLIC)

  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt      @map("updated_at")

  @@map("boards")
}

enum BoardsStatus {
  PUBLIC
  PRIVATE
}


